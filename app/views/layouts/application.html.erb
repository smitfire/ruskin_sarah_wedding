  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <header class="masthead">
    <div class="container">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/#home-anchor">Home</a></li>
