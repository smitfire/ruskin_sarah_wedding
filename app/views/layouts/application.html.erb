      </ul>
      </div>
    </header>
    <br>
    <br>
    <br>
	<div class="container">
		<%= yield %>
	
	 <hr>
		<footer>
     <ul class="pull-right">
        <li>
        <% if @current_user %>
          <%= link_to "Log out", session_path(@current_user), method: :delete, class: 'btn btn-default' %>   
        <% else %>  
          <%= render 'users/admin' %>
        <% end %>
        </li>
      </ul>  
    </footer>
    <div class="clearfix"></div>
    <hr>
	</div>
	</body>
</html>
