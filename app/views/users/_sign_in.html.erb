    
<%= form_for :user, html:{class: "form-signin form-horizontal"}, url: sessions_path do |f| %>
	
	<div class="form-group">
		<%= f.label :first, class: 'control-label col-sm-1' %>
		<div class="col-sm-11">
			<p>
				<%= f.text_field :first, :placeholder => "First Name", class: "form-control" %>
			</p>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :last, class: 'control-label col-sm-1' %>
		<div class="col-sm-11">			
			<p>
				<%= f.text_field :last, :placeholder => "Last Name", class: "form-control" %>
			</p>
		</div>
	</div>
	
	<div class="form-group">
		<%= f.label :email, class: 'control-label col-sm-1' %>
		<div class="col-sm-11">
			<p>
				<%= f.text_field :email, :placeholder => "Email", class: "form-control" %>
			</p>
		</div>
	</div>		
	
	<div class="form-group">
		<%= f.label :password, class: 'control-label col-sm-1' %>
		<div class="col-sm-11">		
			<p>
				<%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
			</p>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :password_confirmation, "Confirm" ,class: 'control-label col-sm-1'%>
		<div class="col-sm-11">		
			<p>
				<%= f.password_field :password_confirmation, :placeholder => "Password Confirm", class: "form-control" %>
			</p>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :reply, "Comment" ,class: 'control-label col-sm-1'%>
		<div class="col-sm-11">		
		
				<%= f.text_area :reply, class: "form-control" %>
			
		</div>
	</div>
	
	<div class="form-group">
		
		<%= f.label :attendance,  "Attending?", class: 'control-label col-sm-1' %>
					
		<div class="col-sm-1">
			<p>
				<%= f.check_box :attendance, class: 'form-control' %>
			</p>
		</div>
			<%= f.label :newsletter, "Newsletter?", class: 'control-label col-sm-1' %>
			<div class="col-sm-1">
				<p>
					<%= f.check_box :newsletter, class: 'form-control' %>
				</p>
			</div>

			<%= f.label :meal, "Vegeterian Meal?", class: 'control-label col-sm-2' %>
			<div class="col-sm-1">
				<p>
					<%= f.check_box :meal, class: 'form-control' %>
				</p>
			</div>

			<%= f.label :plus_one, "Plus One?", class: 'control-label col-sm-2' %>
			<div class="col-sm-1">
				<p>
					<%= f.check_box :meal, class: 'form-control' %>
				</p>
			</div>	
	</div>

	<div class="form-group">
		<div class="col-sm-12">
			<p>
				<%= f.submit "RSVP", class: "btn btn-block btn-primary" %>
			</p>
		</div>
	</div>

	<div class="clearfix"></div>
<% end %>