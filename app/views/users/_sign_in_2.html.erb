    
<%= form_for :user, html:{class: "form-signin form-horizontal"}, url: sessions_path do |f| %>
	
	
	<div class="form-group">
		<%= f.label :email, class: 'control-label col-sm-2' %>
		<div class="col-sm-8">
			<p>
				<%= f.text_field :email, :placeholder => "Email", class: "form-control" %>
			</p>
		</div>
	</div>		

	<div class="form-group">
		<%= f.label :reply, "Comment" ,class: 'control-label col-sm-2'%>
		<div class="col-sm-8">		
		
				<%= f.text_area :reply, class: "form-control" %>
			
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-8 col-sm-offset-2">
			<p>
				<%= f.submit "RSVP", class: "btn btn-block btn-primary" %>
			</p>
		</div>
	</div>

	<div class="clearfix"></div>
<% end %>