
<table class="table table-hover norm">
	<thead>
		<tr class=""> 
			<td>First Name</td>
			<td>Last Name</td>
			<td>Email</td>
			<td>Attendance, <%= @count %></td>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<% if user.attendance == 'false' %>
				<tr>
			<% else %>
				<tr class="success">
			<% end %>
			<td>
				<h5>
					<%= user.first.capitalize %>
				</h5>
			</td>
			<td>
				<h5>
					<%= user.last.capitalize %>
				</h5>
			</td>
			<td>
				<h5>
					<%= user.email %>
				</h5>
			</td>
			<td>
				<h4>
					<%= user.attendance.capitalize %>
				</h4>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>