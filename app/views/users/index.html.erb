
<table class="table table-hover norm">
	<thead>
		<tr class=""> 
			<td>First Name</td>
			<td>Last Name</td>
			<td>Email</td>
			<td>Attendance</td>
			<td>Newsletter</td>
			<td>Veg Meals</td>
			<td>Total Attending,  <%= @count %></td>
			<td>Comments</td>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<% if user.attendance == 'No' %>
				<tr>
			<% else %>
				<tr class="success">
			<% end %>
			<td>
				<h5>
					<%if user.first %>
					<%= user.first.capitalize %>
					<%end%>
				</h5>
			</td>
			<td>
				<h5>
					<%if user.last %>
					<%= user.last.capitalize %>
					<% end %>
				</h5>
			</td>
			<td>
				<h5>
					<%= user.email %>
				</h5>
			</td>
			<td>
				<h4>
					<%if user.attendance %>
					<%= user.attendance.capitalize %>
					<% end %>
				</h4>
			</td>
			<td>
				<h4>
					<%if user.newsletter %>
					<%= user.newsletter.capitalize %>
					<% end %>
				</h4>
			</td>
			<td>
				<h4>
					<%if user.meal %>
					<%= user.meal %>
					<% end %>
				</h4>
			</td>
			<td>
				<h4>
					<%if user.plus_one %>
					<%= user.plus_one %>
					<% end %>
				</h4>
			</td>
			<td>
				<p>
					<%if user.reply %>
						<%= user.reply %>
					<% end %>
				</p>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>